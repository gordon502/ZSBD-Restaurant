<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.EditItemPanelController">
   <left>
      <VBox alignment="CENTER" maxWidth="300.0" minWidth="300.0" prefHeight="600.0" prefWidth="300.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane fx:id="dataGrid" alignment="TOP_CENTER" hgap="10.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="214.0" prefWidth="290.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="203.3333282470703" minWidth="10.0" prefWidth="158.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="262.0" minWidth="10.0" prefWidth="262.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="72.0" minHeight="10.0" prefHeight="72.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="102.0" minHeight="10.0" prefHeight="59.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="63.0" minHeight="10.0" prefHeight="63.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="63.0" minHeight="10.0" prefHeight="63.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name" GridPane.halignment="CENTER" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Price" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Food Category" textAlignment="CENTER" wrappingWidth="72.228515625" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                  <TextField fx:id="priceTextField" prefHeight="25.0" prefWidth="183.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="nameTextField" GridPane.columnIndex="1" />
                  <TextField fx:id="vatTextField" prefWidth="177.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="VAT" GridPane.rowIndex="3" />
                  <ComboBox fx:id="foodCategoryComboBox" prefHeight="25.0" prefWidth="214.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="30.0" top="10.0" />
               </VBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </GridPane>
            <Label fx:id="userLabel" />
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addItem" prefHeight="25.0" prefWidth="111.0" text="Add">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button fx:id="modifyButton" mnemonicParsing="false" onAction="#modifyItem" prefHeight="25.0" prefWidth="111.0" text="Modify" />
            <Button fx:id="activeButton" mnemonicParsing="false" onAction="#activeButton" prefHeight="25.0" prefWidth="110.0" text="Active/Disactive" />
            <Button fx:id="foodCategoriesButton" mnemonicParsing="false" onAction="#showFoodCategoriesPanel" prefHeight="24.0" prefWidth="110.0" text="Food Categories">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#showMainMenu" prefHeight="25.0" prefWidth="110.0" text="Back" />
         </children>
      </VBox>
   </left>
   <center>
      <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Active Items">
               <content>
                  <TableView fx:id="activeFoodItemsTable" prefHeight="600.0" prefWidth="0.0">
                     <columns>
                        <TableColumn minWidth="0.0" prefWidth="100.0" text="FoodId" />
                        <TableColumn prefWidth="100.0" text="Name" />
                        <TableColumn prefWidth="100.0" text="Price" />
                        <TableColumn prefWidth="100.0" text="FoodCategory" />
                        <TableColumn prefWidth="100.0" text="VAT" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
          </Tab>
            <Tab text="Unactive Items">
               <content>
                  <TableView fx:id="unactiveFoodItemsTable" prefHeight="600.0" prefWidth="0.0">
                     <columns>
                        <TableColumn minWidth="0.0" prefWidth="100.0" text="FoodId" />
                        <TableColumn prefWidth="100.0" text="Name" />
                        <TableColumn prefWidth="100.0" text="Price" />
                        <TableColumn prefWidth="100.0" text="FoodCategory" />
                        <TableColumn prefWidth="100.0" text="VAT" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
