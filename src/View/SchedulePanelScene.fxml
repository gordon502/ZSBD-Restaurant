<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.SchedulePanelController">
   <children>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0">
         <left>
            <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="180.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="weekLabel" text="Week">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER" prefWidth="180.0" spacing="10.0">
                     <children>
                        <Button fx:id="prevWeekButton" mnemonicParsing="false" text="Prev. Week" />
                        <Button fx:id="nextWeekButton" mnemonicParsing="false" text="Next Week" />
                     </children>
                  </HBox>
                  <Label text="User">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="userCombo" prefWidth="150.0" />
                  <Label text="Day" />
                  <ComboBox fx:id="dayCombo" prefWidth="150.0" />
                  <Label text="Start of shift" />
                  <ComboBox fx:id="startCombo" prefWidth="150.0" />
                  <Label text="End of shift" />
                  <ComboBox fx:id="endCombo" prefWidth="150.0" />
                  <Button fx:id="addButton" mnemonicParsing="false" prefWidth="100.0" text="Add">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="modButton" mnemonicParsing="false" onAction="#modSchedule" prefWidth="100.0" text="Modify" />
                  <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeSchedule" prefWidth="100.0" text="Remove" />
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#showMainMenu" prefWidth="100.0" text="Back">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets left="10.0" top="10.0" />
               </BorderPane.margin>
            </VBox>
         </left>
         <center>
            <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn prefWidth="75.0" text="User" />
                  <TableColumn prefWidth="75.0" text="Mon.&#10;date" />
                  <TableColumn prefWidth="75.0" text="Tue.&#10;date" />
                  <TableColumn prefWidth="75.0" text="Wed.&#10;date" />
                  <TableColumn prefWidth="75.0" text="Thu.&#10;date" />
                  <TableColumn prefWidth="75.0" text="Fri.&#10;date" />
                  <TableColumn prefWidth="75.0" text="Sat.&#10;date" />
                  <TableColumn prefWidth="75.0" text="Sun.&#10;date" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </TableView>
         </center>
      </BorderPane>
   </children>
</StackPane>
